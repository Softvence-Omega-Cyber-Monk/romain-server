
model User{
  id String @id @default(uuid())
  firstName String?
  lastName String?
  email String @unique
  phone  String?
  password String
  isActive Boolean @default(true)
  role     SystemRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum SystemRole {
  SUPER_ADMIN
  ADMIN
  GENERAL_MANAGER
  ADMIN_DIRECTOR
  ACCOUNTANT
  STUDENT
}