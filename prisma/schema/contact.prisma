enum ContactStatus {
  NEW
  REPLIED
  ARCHIVED
}

model ContactMessage {
  id        String        @id @default(uuid())
  name      String?
  email     String
  phone     String?
  subject   String?
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("contact_messages")
}
