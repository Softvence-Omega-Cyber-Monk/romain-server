enum NewsletterStatus {
  DRAFT
  SCHEDULED
  SENDING
  COMPLETED
  FAILED
}

model NewsletterCampaign {
  id          String           @id @default(uuid())
  title       String
  subject     String
  html        String
  scheduledAt DateTime?
  status      NewsletterStatus @default(DRAFT) // Use the defined Enum for the status field
  recipients  Json? // recipients: JSONB array of objects
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("newsletter_campaigns")
}
